---
import '@/styles/globals.css'
import Layout from '../../layouts/MainLayout.astro';
import HeroImage from '../hero/HeroImage.astro';
import Procedures from '../Procedures.astro';
import Testimonials from '../Testimonials.astro';
import Heading from '../Heading.astro';
import Gallery from '../Gallery'

import { getI18N } from "@/i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---


<Layout title={i18n.SEO_TITLE} description={i18n.SEO_DESCRIPTION}>	
	<HeroImage/>
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 divide-y divide-primary-300 border-t border-primary-300">		
		<Procedures/>
		<Testimonials/>
		<div class="py-24 sm:py-32">
			<Heading title={i18n.GALLERY_TITLE}/>
			<div class="mt-20">
				<Gallery client:visible/>
			</div>
		</div>		
	</div>
</Layout>

