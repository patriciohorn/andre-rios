---
import MainLayout from '@/layouts/MainLayout.astro';
import HeaderCenteredEyebrow from '../HeaderCenteredEyebrow.astro';
import { getI18N } from '@/i18n';
import { Image } from 'astro:assets';

import doctorImage from '../../assets/doctor.jpg';

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const content = Object.values(i18n.ABOUT.CONTENT);
---

<MainLayout title={`Rios MD Plastics | ${i18n.ABOUT.TAG}`}>
  <section class="py-16 md:py-28 px-6 lg:px-8 bg-[#FAFAFA]">
    <div class="max-w-3xl mx-auto">
      <div class="flex flex-col gap-12 md:gap-20">
        <HeaderCenteredEyebrow eyebrow={i18n.ABOUT.TAG} title={i18n.ABOUT.TITLE} />
        <div class="rounded-xl overflow-hidden shadow-lg">
          <Image
            src={doctorImage}
            alt="Dr. Andre RÃ­os"
            class="w-full h-full object-cover aspect-[3/2]"
          />
        </div>
        <div class="flex flex-col space-y-8">
          <div class="flex flex-col gap-2">
            <div class="flex gap-2">
              <p class="text-sm font-semibold text-gray-900">{i18n.ABOUT.CEDULA}</p>
              <p class="text-sm text-gray-800">{i18n.ABOUT.CEDULA_NUMBER}</p>
            </div>
            <div class="flex gap-2">
              <p class="text-sm font-semibold text-gray-900">{i18n.ABOUT.BOARD}</p>
              <p class="text-sm text-gray-800">{i18n.ABOUT.BOARD_NUMBER}</p>
            </div>
          </div>
          {
            content.map((item) => (
              <p class="text-gray-800 text-lg leading-7 max-w-prose text-justify">{item}</p>
            ))
          }
        </div>
      </div>
    </div>
  </section>
</MainLayout>
