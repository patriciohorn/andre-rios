---
import {Image} from "astro:assets"
import logoWhite from "@/assets/logo-white.svg"
import { Button } from "@/components/ui/button";

---

<header class="flex items-center h-16 md:h-20 z-50 sticky top-0 bg-black shadow-xl py-4">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between w-full h-full">   
    <a href="/" class="flex-1">
      <div class="sr-only">Inicio</div>
      <Image src={logoWhite} alt="logo Dr. Andrei Rios" height="64" width="252" class="h-10 sm:h-12 w-auto"/>
    </a>   
    <slot name="mobile-nav-header"/>

    <div class="hidden lg:flex">
      <slot name="center-header"/>
    </div>

    <div class="hidden lg:flex lg:justify-end lg:flex-1 ">

      <Button  className="hidden lg:flex bg-primary-500 text-primary-950 hover:bg-primary-600">Contacto</Button>

    </div>
  </div>
</header>