---
import {Image} from "astro:assets"
import logo from "@/assets/logo.png"
import { Button } from "@/components/ui/button";
import Banner from "@/components/Banner.astro"
---

<header class="flex items-center h-16 md:h-20 z-50 sticky top-0 bg-primary-500 shadow-xl py-3">
  <div class="relative container flex items-center justify-between w-full h-full">   
    <a href="/" class="flex-1">
      <div class="sr-only">Inicio</div>
      <Image src={logo} alt="logo Dr. Andrei Rios" height="64" width="252" class="h-10 sm:h-12 w-auto"/>
    </a>   
    <slot name="mobile-nav-header"/>

    <div class="hidden md:flex">
      <slot name="center-header"/>
    </div>

    <div class="hidden sm:flex justify-end sm:flex-1">

      <Button className="hidden md:flex">Contacto</Button>

    </div>
  </div>
</header>