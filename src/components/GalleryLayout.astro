---
import '../styles/globals.css';
import HeaderCenteredEyebrow from './HeaderCenteredEyebrow.astro';
import { GalleryTabs } from '@/components/GalleryTabs';
import { WeightLossGalleryTabs } from '@/components/WeightLossGalleryTabs';
import MainLayout from '@/layouts/MainLayout.astro';

const { eyebrow, title, tabsData } = Astro.props;
---

<MainLayout title={`Rios MD Plastics | Gallery - ${title}`}>
  <section class="bg-[#FAFAFA] py-12 sm:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col gap-10">
        <div>
          <div class="items-center gap-6">
            <p
              class="text-primary-900 text-sm font-semibold uppercase tracking-wide">
              {eyebrow}
            </p>
            <h1
              class="text-4xl sm:text-5xl sm:leading-[1.16] font-semibold tracking-tight text-neutral-900">
              {title}
            </h1>
          </div>
        </div>
        <div class="min-h-screen">
          {
            title.includes('Weight') || title.includes('Peso') ? (
              <WeightLossGalleryTabs
                tabsData={tabsData}
                client:visible
              />
            ) : (
              <GalleryTabs tabsData={tabsData} client:visible />
            )
          }
        </div>
      </div>
    </div>
  </section>
</MainLayout>
