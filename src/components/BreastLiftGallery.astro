---
import '../styles/globals.css';
import HeaderCenteredEyebrow from './HeaderCenteredEyebrow.astro';
import { BreastLiftTabs } from '@/components/breastLiftTabs';
import MainLayout from '@/layouts/MainLayout.astro';

const { eyebrow, title, tabsTitles, tabsData } = Astro.props;
---

<MainLayout title={`Rios MD Plastics | Gallery - ${title}`}>
  <section class="bg-primary-50 py-12 sm:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col gap-10">
        <div class="items-center gap-6">
          <p
            class="text-primary-500 text-sm font-semibold uppercase tracking-wide">
            {eyebrow}
          </p>
          <h1
            class="text-4xl sm:text-5xl  font-semibold tracking-tight text-primary-950">
            {title}
          </h1>
        </div>
        <div class="h-screen">
          <BreastLiftTabs tabsData={tabsData} client:load />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
