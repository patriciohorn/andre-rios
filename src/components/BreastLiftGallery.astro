---
import '../styles/globals.css';
import HeaderCenteredEyebrow from './HeaderCenteredEyebrow.astro';
import { BreastLiftTabs } from '@/components/breastLiftTabs';
import MainLayout from '@/layouts/MainLayout.astro';

const { eyebrow, title, tabsTitles, tabsData } = Astro.props;
---

<MainLayout title={`Rios MD Plastics | Gallery - ${title}`}>
  <section class="bg-[#FAFAFA] py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col gap-8">
        <div
          class="max-w-2xl mx-auto text-center flex flex-col items-center gap-2">
          <p class="leading-7 text-primary-900 text-sm font-semibold">
            {eyebrow}
          </p>
          <h1
            class="text-4xl sm:text-5xl sm:leading-[1.1] font-semibold tracking-tight text-primary-950">
            {title}
          </h1>
        </div>
        <div class="h-screen">
          <BreastLiftTabs tabsData={tabsData} client:load />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
