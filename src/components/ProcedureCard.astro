---
import { Image } from 'astro:assets';
const { src, alt, title } = Astro.props;
import { ArrowRight } from 'lucide-react';
---

<a href={`/procedimientos/#Busto`}
  class="relative group cursor-pointer overflow-hidden rounded-lg shadow-sm transition ease-in-out hover:shadow-lg">
  <Image
    src={src}
    alt={alt}
    class="absolute inset-0 h-full w-full object-cover"
  />
  <div
    class="p-4 sm:p-6 relative bg-gradient-to-t from-primary-900/70 to-transparent pt-32 sm:pt-48 lg:pt-64 flex items-center justify-between">
    <h3
      class="text-lg font-medium text-white sm:text-2xl group-hover:text-primary-100 transition-all ease-in-out duration-200">
      {title}
    </h3>
    <ArrowRight
      strokeWidth={2}
      size={24}
      className="text-white group-hover:-rotate-45 group-hover:text-primary-100 transition-all ease-in-out duration-200"
    />
  
  </div>
</a>
