---
import { Image } from 'astro:assets'
const {src, alt, title} = Astro.props

---

<div class="bg-white rounded-xl shadow-sm border overflow-hidden">
  <div class="overflow-hidden">
    <Image src={src} alt={alt} class="object-cover w-full h-full aspect-[3/2] hover:scale-105 transition-transform duration-300 ease-in-out"/>
  </div>
  <div class="p-6 border-t">
    <h3 class="text-2xl text-center font-semibold text-gray-900">{title}</h3>
  </div>
</div>